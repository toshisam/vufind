  <th><?= isset($headers['action']) ? $headers['action'] : '' ?></th>
  <td><?=$holdingActionString?> </td>
</tr>
<? endif; ?>
<tr>
  <th><?= $headers['availability'] ?></th>
  <td><?=$moreDetailsLink?></td>
